<?xml version="1.0"?>
<ruleset name="WP Art Routes Plugin">
    <description>WordPress Coding Standards for WP Art Routes Plugin</description>

    <!-- Scan all files in directory -->
    <file>.</file>

    <!-- Exclude files and directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/languages/*.mo</exclude-pattern>
    <exclude-pattern>*/bin/*</exclude-pattern>
    <exclude-pattern>*/@route-info-rest-client/*</exclude-pattern>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show progress and use colors -->
    <arg value="ps"/>

    <!-- Use WordPress-Core ruleset as the base -->
    <rule ref="WordPress-Core">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow yoda conditions to be optional -->
        <exclude name="WordPress.PHP.YodaConditions.NotYoda"/>
    </rule>

    <!-- Add WordPress-Extra for additional best practices -->
    <rule ref="WordPress-Extra">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow yoda conditions to be optional -->
        <exclude name="WordPress.PHP.YodaConditions.NotYoda"/>
        
        <!-- Relax some formatting rules for better compatibility -->
        <exclude name="WordPress.Arrays.MultipleStatementAlignment.DoubleArrowNotAligned"/>
    </rule>

    <!-- Security rules - these are critical -->
    <rule ref="WordPress.Security.EscapeOutput">
        <type>error</type>
    </rule>

    <rule ref="WordPress.Security.NonceVerification">
        <type>error</type>
    </rule>

    <rule ref="WordPress.Security.ValidatedSanitizedInput">
        <type>error</type>
    </rule>

    <!-- Internationalization rules -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="wp-art-routes"/>
            </property>
        </properties>
    </rule>
</ruleset>